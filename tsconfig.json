{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/Navbar.jsx", "app/layout.jsx", "app/(auth)/sign-in/[[...login]]/page.tsx", "app/api/auth/[...nextauth]/route.js", "app/api/auth/[...nextauth].js", "models/userModel.js", "app/api/auth/[...nextauth]/route.js", "app/(auth)/layout.jsx", "app/(auth)/register/page.tsx", "lib/localContext.js", "i18n.js"],
  "exclude": ["node_modules"]
}
